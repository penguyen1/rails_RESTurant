<!-- Shows each customer in a table row -->
<tr>
  <td><%= customer.name %></td>
  <td>$<%= customer.total %></td>
  <td><%= link_to 'View', customer_path(customer) %></td>
  <td><%= link_to 'Delete', customer_path(customer),
          method: :delete, 
          data: {confirm: 'You sure about that, big guy?'} %></td>
</tr>
